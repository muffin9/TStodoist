{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules", "dist"]
}
