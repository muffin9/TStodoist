{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["DOM", "esnext"],
    "module": "commonjs",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
